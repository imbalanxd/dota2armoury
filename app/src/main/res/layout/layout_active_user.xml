<?xml version="1.0" encoding="utf-8"?>

<com.example.D2Outfitter.ui.ActiveUserDisplay xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/currentUserContainer"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="horizontal">
    <ImageView android:id="@+id/currentUserImage"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="15dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="10dp"
               android:background="@drawable/user_portrait_green"
               android:scaleType="fitXY"/>
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.0"
                  android:layout_marginTop="15dp"
                  android:layout_marginRight="15dp"
                  android:orientation="vertical">

        <TextView android:id="@+id/currentUserName"
                  style="@style/steam_green_large"
                  android:text="User"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <com.example.D2Outfitter.ui.ColourContentBar android:layout_width="match_parent"
                                                     android:layout_height="20dp"
                                                     android:id="@+id/itemRarityBar"/>
    </LinearLayout>
</com.example.D2Outfitter.ui.ActiveUserDisplay>