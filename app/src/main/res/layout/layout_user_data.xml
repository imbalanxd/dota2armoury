<?xml version="1.0" encoding="utf-8"?>

<com.example.D2Outfitter.ui.UserDisplay xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp">
    <ImageView android:id="@+id/userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@drawable/user_portrait_blue"/>
    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/userImage">
        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
            <TextView android:id="@+id/userAlias"
                      style="@style/steam_blue_medium"
                      android:layout_weight="1.0"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:text="Name"/>
            <TextView android:id="@+id/userSteamPage"
                      style="@style/steam_dark_blue_tiny"
                      android:layout_weight="1.0"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:text="URL"/>
        </LinearLayout>

        <Button android:id="@+id/acceptButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tick"/>
    </LinearLayout>


</com.example.D2Outfitter.ui.UserDisplay>